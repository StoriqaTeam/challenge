<p id="notice" class="hide"><%= notice %></p>

<h3>Tasks for suite `<%= @suite.name %>`</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= link_to 'Delete', suite_task_path(@suite, task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_suite_task_path, class: "btn-floating btn-large waves-effect waves-light red" do %>
  <i class="material-icons">add</i>
<% end %>
