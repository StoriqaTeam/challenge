<p id="notice" class="hide"><%= notice %></p>

<h3>Users</h3>

<table> 
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Role</th>
      <th>Sign up date</th>
    </tr>
  </thead>

  <tbody>
    <% @users_with_solution_dates.each do |users_with_solution_date| %>
      <tr>
        <td><%= users_with_solution_date[:user].email %></td>
        <td><%= users_with_solution_date[:user].name %></td>
        <td><%= users_with_solution_date[:user].role %></td>
        <td><%= users_with_solution_date[:user].created_at.to_formatted_s(:long_ordinal) %></td>
        <td>
          <%= link_to 'Tests', user_suite_solutions_path(users_with_solution_date[:user]), class: "btn green" %>
          <%= link_to 'Edit', edit_user_path(users_with_solution_date[:user]), class: "btn blue" %>
          <%= link_to 'Destroy', users_with_solution_date[:user], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_user_path, class: "btn-floating btn-large waves-effect waves-light red" do %>
  <i class="material-icons">add</i>
<% end %>

